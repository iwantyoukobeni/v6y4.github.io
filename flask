from flask import Flask, jsonify, send_from_directory
import os
import random

app = Flask(__name__)

@app.route('/random_hentai_image')
def random_anime_image():
    # Generate a random number between 1 and 100
    random_number = random.randint(1, 100)

    # Construct the direct URL for the image
    direct_url = f'https://raw.githubusercontent.com/v6y4/hentaiapi/main/{random_number}.jpg'

    return jsonify({"image_url": direct_url}), 200

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=8000)
